<article class="post card">
  <div class="card-body">
    <div class="title">
      <a class="card-title" href="{{post_url}}" target="_blank">{{title}}</a>
      <span>Posted by {{user.username}} on {{format_date created_at}}</span>
    </div>
    <div class="card-text">
      Posted by {{user.username}} on {{format_date created_at}}
      |
      <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
  </div>
</article>
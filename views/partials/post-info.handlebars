<article class="post card">
  <div class="card-body">
    <div class="title">
      <a class="card-title" href="/post/{{id}}" target="_blank">{{title}}</a>
      <span>Posted by {{user.username}} on {{format_date created_at}}</span>
    </div>
    <div class="card-text">
      {{post_text}}
    </div>
  </div>
</article>